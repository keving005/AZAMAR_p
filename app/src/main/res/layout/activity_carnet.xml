<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarnetActivity"> <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6C3483"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Carnet Médico Digital"
        app:titleTextColor="#FFFFFF"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carnet Médico Digital"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/design_default_color_primary"
                android:layout_marginBottom="24dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                android:layout_marginVertical="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:background="@drawable/gradient_blue_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDENTIFICACIÓN DEL PACIENTE"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF"
                        android:letterSpacing="0.1"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:id="@+id/tv_nombre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="KEVIN SÁNCHEZ PÉREZ"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="10dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NÚMERO DE AFILIACIÓN/ID"
                        android:textSize="12sp"
                        android:textColor="#C8E8FF"/>

                    <TextView
                        android:id="@+id/tv_afiliacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="HSP-987654321"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="20dp"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="GRUPO SANGUÍNEO"
                                android:textSize="12sp"
                                android:textColor="#C8E8FF"/>

                            <TextView
                                android:id="@+id/tv_tipo_sangre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="A+"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NACIMIENTO"
                                android:textSize="12sp"
                                android:textColor="#C8E8FF"/>

                            <TextView
                                android:id="@+id/tv_fecha_nacimiento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="01/01/1990"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VENCE"
                                android:textSize="12sp"
                                android:textColor="#C8E8FF"/>

                            <TextView
                                android:id="@+id/tv_vencimiento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="12/2028"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles Médicos Relevantes"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alergias:"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_alergias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Penicilina, Polen"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condiciones Crónicas:"
                    android:textSize="16sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tv_condiciones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Diabetes Tipo 1"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contacto de Emergencia:"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_error"/>
                <TextView
                    android:id="@+id/tv_contacto_emergencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Laura García (555-1234)"
                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="#6C3483"
        app:itemTextColor="#4A235A"
        app:itemBackground="@drawable/estilo_boton_menu"
        app:itemHorizontalPadding="24dp"
        app:itemIconPadding="16dp"/>

</androidx.drawerlayout.widget.DrawerLayout>