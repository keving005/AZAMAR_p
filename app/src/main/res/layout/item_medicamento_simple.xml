<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_lista_redonda"
            android:backgroundTint="#E3F2FD"
            android:gravity="center"
            android:layout_marginEnd="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_info_details"
                app:tint="#1565C0"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreMedItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol 500mg"
                android:textColor="#37474F"
                android:textStyle="bold"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tvDetalleMedItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caja con 20 tabletas"
                android:textColor="#78909C"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tvStockMedItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stock: 15 pzas"
                android:textColor="#2E7D32"
                android:textSize="12sp"
                android:textStyle="italic"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnAgregarItem"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/bg_lista_redonda"
            android:backgroundTint="#E8F5E9"
            android:src="@android:drawable/ic_input_add"
            app:tint="#43A047"
            android:padding="6dp"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>