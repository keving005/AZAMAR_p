<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:text="Detalle de la Cita"
            android:textSize="14sp"
            android:textColor="#757575"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDetalleNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cargando nombre..."
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginBottom="20dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical"
                android:background="#E8EAF6">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/ic_menu_my_calendar"
                    app:tint="#1A237E"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/tvDetalleFecha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/--/----"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"/>

                    <TextView
                        android:id="@+id/tvDetalleHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--:--"
                        android:textSize="16sp"
                        android:textColor="#3949AB"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView android:text="Datos de Contacto" android:textStyle="bold" android:textColor="#00BFA5" android:layout_marginBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:text="Teléfono: " android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvDetalleTelefono" android:text="..." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:text="Correo: " android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvDetalleCorreo" android:text="..." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginVertical="12dp"/>

                <TextView android:text="Información Personal" android:textStyle="bold" android:textColor="#00BFA5" android:layout_marginBottom="12dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:text="Nacimiento: " android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvDetalleNacimiento" android:text="..." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="8dp">
                    <TextView android:text="Género: " android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvDetalleGenero" android:text="..." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                    <TextView android:text="Seguro/Afiliación: " android:textStyle="bold" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                    <TextView android:id="@+id/tvDetalleAfiliacion" android:text="..." android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView android:text="Motivo de Consulta" android:textStyle="bold" android:textColor="#FF9800" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView android:id="@+id/tvDetalleTipoCita" android:text="Tipo: ..." android:textStyle="italic" android:textColor="#757575" android:layout_marginBottom="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvDetalleMotivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textSize="16sp"
                    android:textColor="#212121"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnEscribirReceta"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Escribir Receta Digital"
            android:backgroundTint="#00897B"
            android:textSize="16sp"
            app:icon="@android:drawable/ic_menu_edit"
            app:cornerRadius="12dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnReagendar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Reagendar Cita"
            android:backgroundTint="#1976D2"
            app:cornerRadius="12dp"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnCancelarCita"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Cancelar Cita"
            android:backgroundTint="#D32F2F"
            app:cornerRadius="12dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>