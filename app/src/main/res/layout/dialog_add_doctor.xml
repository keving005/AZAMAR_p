<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <EditText android:id="@+id/etDocNombre" android:hint="Nombre Completo" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etDocEspecialidad" android:hint="Especialidad (ej. Pediatría)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etDocEmail" android:hint="Correo Electrónico" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etDocPass" android:hint="Contraseña (mín 6)" android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>