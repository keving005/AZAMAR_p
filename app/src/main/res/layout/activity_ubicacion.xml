<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/tvTituloMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación de la Clínica"
            android:textSize="22sp"
            android:textColor="#2E86C1"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/ivMapa"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_mapmode"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección: Av. Cuauhtémoc 330, Doctores, Ciudad de México"
            android:textSize="16sp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnComoLlegar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir en Google Maps"
            android:backgroundTint="#2E86C1"
            android:textColor="#FFFFFF"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar al Menú"
            android:backgroundTint="#A569BD"
            android:textColor="#FFFFFF"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
