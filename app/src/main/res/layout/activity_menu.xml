<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fitsSystemWindows="true">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#6C3483"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="Cita Médica"
            app:titleTextColor="#FFFFFF"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/cita_medica"
                    android:textColor="#6C3483"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Nombre -->
                <EditText
                    android:id="@+id/etNombrePaciente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre del paciente"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp"
                    android:textColor="#000"
                    android:textColorHint="#7D3C98" />


                <!-- SEXO + TIPO DE SANGRE EN MISMA LÍNEA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <Spinner
                        android:id="@+id/spSexo"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="@android:drawable/edit_text"
                        android:layout_marginEnd="8dp" />

                    <Spinner
                        android:id="@+id/spTipoSangre"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:paddingStart="8dp"
                        android:paddingEnd="8dp"
                        android:background="@android:drawable/edit_text" />
                </LinearLayout>


                <!-- Peso -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etPeso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Peso (kg)"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:textColorHint="#7D3C98"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/etAltura"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Altura (cm)"
                        android:inputType="numberDecimal"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:textColorHint="#7D3C98"/>
                </LinearLayout>


                <!-- Alergias -->
                <EditText
                    android:id="@+id/etAlergias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alergias"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp"
                    android:textColorHint="#7D3C98"/>

                <!-- Especialista -->
                <Spinner
                    android:id="@+id/spEspecialista"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="10dp" />

                <!-- FECHA + HORA EN MISMA LÍNEA -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="16dp">

                    <EditText
                        android:id="@+id/etFechaCita"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:clickable="true"
                        android:focusable="false"
                        android:drawableEnd="@android:drawable/ic_menu_today"
                        android:hint="Fecha"
                        android:textColorHint="#7D3C98"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/etHoraCita"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:background="@android:drawable/edit_text"
                        android:clickable="true"
                        android:focusable="false"
                        android:drawableEnd="@android:drawable/ic_lock_idle_alarm"
                        android:hint="Hora"
                        android:textColorHint="#7D3C98"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notificaciones:"
                        android:textColor="#6C3483"
                        android:layout_marginEnd="12dp"/>

                    <RadioGroup
                        android:id="@+id/cbNotificaciones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/rbNotiSi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sí" />

                        <RadioButton
                            android:id="@+id/rbNotiNo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:layout_marginStart="12dp"/>
                    </RadioGroup>

                </LinearLayout>

                <!-- Tipo de cita -->
                <EditText
                    android:id="@+id/etTipoCita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tipo de cita"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="24dp"
                    android:textColorHint="#7D3C98"/>
                <Button
                    android:id="@+id/btnUbicacion"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:backgroundTint="#8E44AD"
                    android:text="Elegir Hospital en el Mapa"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginBottom="24dp"/>

                <!-- Botones principales -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnGuardar"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:backgroundTint="#6C3483"
                        android:text="Guardar"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"/>

                    <Button
                        android:id="@+id/btnHistorial"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:backgroundTint="#3498DB"
                        android:text="Historial"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"/>

                    <Button
                        android:id="@+id/btnSalir"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:backgroundTint="#E74C3C"
                        android:text="Salir"
                        android:textAllCaps="false"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnSegundaPantalla"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#6C3483"
                    android:text="Ir a Segunda Pantalla"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:id="@+id/tvHistorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="8dp"
                    android:text="Historial de citas:"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvCitas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(Sin registros aún)"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="#6C3483"
        app:itemTextColor="#4A235A"
        app:itemBackground="@drawable/estilo_boton_menu"
        app:itemHorizontalPadding="24dp"
        app:itemIconPadding="16dp"/>

</androidx.drawerlayout.widget.DrawerLayout>
