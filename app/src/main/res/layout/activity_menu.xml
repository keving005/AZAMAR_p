<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FE"
    tools:context=".MenuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layoutDashboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible"
            android:background="#F8F9FE">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="40dp"> <View
                android:id="@+id/headerBg"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/bg_header_rounded"
                android:backgroundTint="#1A237E"
                app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:id="@+id/btnMenuHamburguesa"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    app:tint="#FFFFFF"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/tvLabelHola"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido,"
                    android:textColor="#B3FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnMenuHamburguesa"/>

                <TextView
                    android:id="@+id/tvUserNameDashboard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Paciente"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toStartOf="@+id/cardProfileImage"
                    app:layout_constraintStart_toStartOf="@+id/tvLabelHola"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabelHola"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProfileImage"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#33FFFFFF"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvUserNameDashboard"
                    app:layout_constraintTop_toTopOf="@+id/tvUserNameDashboard"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="#FFFFFF"/>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProximaCita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginTop="32dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="10dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:layout_constraintTop_toBottomOf="@+id/tvUserNameDashboard">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/bg_lista_redonda"
                                android:backgroundTint="#E8EAF6"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@android:drawable/ic_menu_my_calendar"
                                    app:tint="#1A237E"/>
                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Próxima Consulta"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#1A237E"
                                android:layout_marginStart="12dp"/>
                        </LinearLayout>

                        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F0F0" android:layout_marginVertical="16dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Especialista" android:textSize="12sp" android:textColor="#90A4AE"/>
                                <TextView android:id="@+id/tvDashEspecialista" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sin citas" android:textStyle="bold" android:textColor="#37474F" android:textSize="16sp" android:layout_marginTop="4dp"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fecha" android:textSize="12sp" android:textColor="#90A4AE"/>
                                <TextView android:id="@+id/tvDashFecha" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="--/--" android:textStyle="bold" android:textColor="#37474F" android:textSize="16sp" android:layout_marginTop="4dp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvActionsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Qué necesitas hoy?"
                    android:textStyle="bold"
                    android:textColor="#37474F"
                    android:textSize="18sp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardProximaCita"/>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:padding="16dp"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toBottomOf="@+id/tvActionsTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnAgendarCitaMain"
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="8dp"
                        app:cardBackgroundColor="#00BFA5"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="20dp">
                            <LinearLayout
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/bg_lista_redonda"
                                android:backgroundTint="#33FFFFFF"
                                android:gravity="center">
                                <ImageView android:layout_width="28dp" android:layout_height="28dp" android:src="@android:drawable/ic_input_add" app:tint="#FFFFFF"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Nueva Cita Médica" android:textColor="#FFFFFF" android:textSize="18sp" android:textStyle="bold"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Programar consulta ahora" android:textColor="#E0F2F1" android:textSize="12sp"/>
                            </LinearLayout>
                            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="?attr/actionModeCloseDrawable" app:tint="#FFFFFF" android:rotation="180"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnFarmaciaMain"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">
                            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_menu_search" app:tint="#FF9800"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Farmacia" android:textColor="#37474F" android:textStyle="bold" android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnRecetasMain"
                        android:layout_width="0dp"
                        android:layout_height="110dp"
                        android:layout_columnWeight="1"
                        android:layout_rowWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">
                            <ImageView android:layout_width="32dp" android:layout_height="32dp" android:src="@android:drawable/ic_menu_edit" app:tint="#512DA8"/>
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mis Recetas" android:textColor="#37474F" android:textStyle="bold" android:layout_marginTop="12dp"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnBuscarEspecialista"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_columnSpan="2"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:clickable="true"
                        android:foreground="?selectableItemBackground">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp">
                            <ImageView android:layout_width="24dp" android:layout_height="24dp" android:src="@android:drawable/ic_menu_mapmode" app:tint="#F57C00"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="16dp">
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mapa de Hospitales" android:textColor="#37474F" android:textStyle="bold"/>
                                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Encuentra clínicas cercanas" android:textSize="12sp" android:textColor="#90A4AE"/>
                            </LinearLayout>
                            <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
                            <ImageView android:layout_width="20dp" android:layout_height="20dp" android:src="?attr/actionModeCloseDrawable" app:tint="#B0BEC5" android:rotation="180"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>


        <androidx.core.widget.NestedScrollView
            android:id="@+id/layoutFormulario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F8F9FE"
            android:visibility="gone"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">
                    <ImageView
                        android:id="@+id/btnRegresarDashboard"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="?attr/homeAsUpIndicator"
                        app:tint="#1A237E"
                        android:background="?selectableItemBackgroundBorderless"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nueva Cita"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1A237E"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Datos del Paciente"
                            android:textColor="#00BFA5"
                            android:textStyle="bold"
                            android:layout_marginBottom="12dp"/>

                        <EditText android:id="@+id/etNombrePaciente" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Nombre completo" android:enabled="false" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F0F0F0" android:paddingHorizontal="16dp" android:layout_marginBottom="12dp" android:textColor="#000000"/>

                        <EditText android:id="@+id/etTelefono" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Teléfono móvil" android:inputType="phone" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F5F6FA" android:paddingHorizontal="16dp" android:layout_marginBottom="12dp"/>
                        <EditText android:id="@+id/etCorreo" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Correo electrónico" android:inputType="textEmailAddress" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F5F6FA" android:paddingHorizontal="16dp" android:layout_marginBottom="12dp"/>

                        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_marginBottom="12dp">
                            <EditText android:id="@+id/etFechaNacimiento" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:hint="F. Nacimiento" android:focusable="false" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F5F6FA" android:paddingHorizontal="16dp" android:layout_marginEnd="8dp"/>
                            <Spinner android:id="@+id/spGenero" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F5F6FA" android:layout_marginStart="8dp"/>
                        </LinearLayout>

                        <CheckBox android:id="@+id/cbAfiliado" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="¿Cuento con seguro de afiliado?" android:layout_marginBottom="8dp"/>
                        <EditText android:id="@+id/etNumeroAfiliado" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Número de Afiliación" android:visibility="gone" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#E3F2FD" android:paddingHorizontal="16dp" android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Detalles de la Cita"
                            android:textColor="#00BFA5"
                            android:textStyle="bold"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selecciona Hospital:"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                        <Spinner android:id="@+id/spHospital" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F5F6FA" android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selecciona Doctor:"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                        <Spinner android:id="@+id/spDoctor" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F5F6FA" android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tipo de Cita:"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                        <Spinner android:id="@+id/spTipoCita" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F5F6FA" android:layout_marginBottom="12dp"/>

                        <EditText android:id="@+id/etMotivo" android:layout_width="match_parent" android:layout_height="80dp" android:hint="Motivo breve de consulta..." android:gravity="top" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#F5F6FA" android:padding="12dp" android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Agenda (Selecciona fecha para ver horas)"
                            android:textColor="#00BFA5"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="12dp"/>

                        <EditText android:id="@+id/etFechaCita" android:layout_width="match_parent" android:layout_height="50dp" android:hint="Seleccionar Fecha" android:focusable="false" android:drawableEnd="@android:drawable/ic_menu_my_calendar" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#E8EAF6" android:paddingHorizontal="16dp" android:layout_marginBottom="12dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Horarios Disponibles:"
                            android:textSize="12sp"
                            android:textColor="#757575"/>
                        <Spinner android:id="@+id/spHorarios" android:layout_width="match_parent" android:layout_height="50dp" android:background="@drawable/bg_lista_redonda" android:backgroundTint="#E8EAF6" android:layout_marginBottom="8dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Agendar Cita"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:backgroundTint="#1A237E"
                    app:cornerRadius="12dp"
                    android:layout_marginTop="32dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />
</androidx.drawerlayout.widget.DrawerLayout>