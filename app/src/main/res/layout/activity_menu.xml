<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#0097A7"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="Agendar Cita MÃ©dica" />
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos del Paciente"
                    android:textStyle="bold"
                    android:textColor="#006064"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etNombrePaciente"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Completo"
                    android:inputType="textPersonName"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginBottom="16dp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#E0F7FA"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SelecciÃ³n de Especialista"
                            android:textStyle="bold"
                            android:textColor="#006064"/>

                        <Button
                            android:id="@+id/btnBuscarEspecialista"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ðŸ”  Buscar Hospital y Doctor"
                            android:backgroundTint="#0097A7"
                            android:textColor="#FFFFFF"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor y Unidad MÃ©dica Asignados:"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"/>

                        <EditText
                            android:id="@+id/etDoctorSeleccionado"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="--- Selecciona arriba ---"
                            android:focusable="false"
                            android:clickable="false"
                            android:textStyle="bold"
                            android:textColor="#004D40"
                            android:background="@null"
                            android:paddingVertical="8dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalles de la Cita"
                    android:textStyle="bold"
                    android:textColor="#006064"
                    android:layout_marginBottom="8dp"/>

                <EditText
                    android:id="@+id/etTipoCita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Motivo de la cita (Ej. Dolor de cabeza)"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Especialidad (Opcional si usaste bÃºsqueda)"
                    android:textSize="12sp"/>
                <Spinner
                    android:id="@+id/spEspecialista"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@android:drawable/btn_dropdown"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etFechaCita"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Fecha"
                        android:focusable="false"
                        android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/etHoraCita"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hora"
                        android:focusable="false"
                        android:drawableEnd="@android:drawable/ic_menu_recent_history"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datos MÃ©dicos"
                    android:textStyle="bold"
                    android:textColor="#006064"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>

                <!-- FECHA DE NACIMIENTO -->
                <EditText
                    android:id="@+id/etFechaNacimiento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de nacimiento"
                    android:focusable="false"
                    android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp"/>

                <!-- TELÃ‰FONO -->
                <EditText
                    android:id="@+id/etTelefono"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="NÃºmero TelefÃ³nico"
                    android:inputType="phone"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"
                    android:layout_marginBottom="12dp"/>

                <!-- SPINNERS SEXO Y TIPO DE SANGRE -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <Spinner
                        android:id="@+id/spSexo"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/btn_dropdown"
                        android:layout_marginEnd="4dp"/>

                    <Spinner
                        android:id="@+id/spTipoSangre"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@android:drawable/btn_dropdown"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <EditText
                        android:id="@+id/etPeso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Peso (kg)"
                        android:inputType="text|number"
                        android:layout_marginEnd="8dp"/>

                    <EditText
                        android:id="@+id/etAltura"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Altura (cm)"
                        android:inputType="text|number"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/etAlergias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Alergias (Opcional)"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btnGuardar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Confirmar Cita"
                    android:backgroundTint="#0097A7"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnHistorial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Historial"
                        android:backgroundTint="#455A64"
                        android:layout_marginEnd="4dp"/>

                    <Button
                        android:id="@+id/btnUbicacion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UbicaciÃ³n"
                        android:backgroundTint="#455A64"
                        android:layout_marginStart="4dp"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnSegundaPantalla"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ir a Segunda Pantalla"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"/>

                <Button
                    android:id="@+id/btnSalir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Salir"
                    android:textColor="#D32F2F"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu" />

</androidx.drawerlayout.widget.DrawerLayout>