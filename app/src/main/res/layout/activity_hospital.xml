<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/premium_bg">

    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:background="@drawable/gradient_premium"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido, Admin"
        android:textSize="14sp"
        android:textColor="#CCFFFFFF"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvTituloHospital"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Panel General"
        android:textSize="32sp"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/tvSubtitulo"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTituloHospital">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCountDoctores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/premium_green_dark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doctores"
                    android:textSize="12sp"
                    android:textColor="@color/premium_text_sec"/>
            </LinearLayout>

            <View android:layout_width="1dp" android:layout_height="match_parent" android:background="#E2E8F0"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvCountFarmacia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#3B82F6"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Productos"
                    android:textSize="12sp"
                    android:textColor="@color/premium_text_sec"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSeccionAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Módulos de Gestión"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/premium_text_main"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardStats"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toTopOf="@id/btnCerrarSesionHosp"
        app:layout_constraintTop_toBottomOf="@id/tvSeccionAdmin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingBottom="20dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnGestionarDoctores"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_my_calendar"
                        app:tint="@color/premium_green_dark"
                        android:background="#F0FDF4"
                        android:padding="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Directorio Médico"
                            android:textStyle="bold"
                            android:textColor="@color/premium_text_main"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gestionar personal"
                            android:textSize="12sp"
                            android:textColor="@color/premium_text_sec"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnGestionarPacientes"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        app:tint="#7C3AED"
                        android:background="#F5F3FF"
                        android:padding="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pacientes"
                            android:textStyle="bold"
                            android:textColor="@color/premium_text_main"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Historial y registros"
                            android:textSize="12sp"
                            android:textColor="@color/premium_text_sec"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnFarmacia"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@color/white"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="16dp">
                    <ImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@android:drawable/ic_menu_manage"
                        app:tint="#3B82F6"
                        android:background="#EFF6FF"
                        android:padding="10dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Farmacia e Inventario"
                            android:textStyle="bold"
                            android:textColor="@color/premium_text_main"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stock de medicamentos"
                            android:textSize="12sp"
                            android:textColor="@color/premium_text_sec"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnCerrarSesionHosp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        android:textColor="@color/logout_red"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:icon="@android:drawable/ic_lock_power_off"
        app:iconTint="@color/logout_red"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>