<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgAvatarDoc"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@android:drawable/ic_menu_report_image"
            app:tint="#0288D1"
            android:background="@drawable/bg_badge_afiliado"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/> <TextView
        android:id="@+id/tvNombreDoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dr. Nombre Apellido"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#263238"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/imgAvatarDoc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"/>

        <TextView
            android:id="@+id/tvEspecialidad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CardiologÃ­a"
            android:textSize="14sp"
            android:textColor="#0097A7"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@id/tvNombreDoc"
            app:layout_constraintTop_toBottomOf="@id/tvNombreDoc"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"/>

        <TextView
            android:id="@+id/tvCorreoDoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="doctor@hospital.com"
            android:textSize="12sp"
            android:textColor="#78909C"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/tvNombreDoc"
            app:layout_constraintTop_toBottomOf="@id/tvEspecialidad"
            app:layout_constraintEnd_toStartOf="@id/btnDelete"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@android:drawable/ic_menu_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="#D32F2F"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/> </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>