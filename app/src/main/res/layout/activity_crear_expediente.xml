<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar Expediente"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvNombrePacienteExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paciente: Nombre Apellido"
            android:textSize="18sp"
            android:textColor="#00BFA5"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos Biométricos"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/etPesoExp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Peso (kg)"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_lista_redonda"
                android:backgroundTint="#FFFFFF"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etAlturaExp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Altura (cm)"
                android:inputType="number"
                android:background="@drawable/bg_lista_redonda"
                android:backgroundTint="#FFFFFF"
                android:padding="12dp"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/etSangreExp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Sangre"
                android:background="@drawable/bg_lista_redonda"
                android:backgroundTint="#FFFFFF"
                android:padding="12dp"/>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diagnóstico Actual"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etPadecimientoActualExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe el diagnóstico o padecimiento activo..."
            android:background="@drawable/bg_lista_redonda"
            android:backgroundTint="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enfermedades Crónicas"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            android:layout_marginBottom="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/cbDiabetesExp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Diabetes Mellitus"/>

                <CheckBox
                    android:id="@+id/cbHipertensionExp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hipertensión Arterial"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alergias y Otros"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etAlergiasExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lista de alergias..."
            android:background="@drawable/bg_lista_redonda"
            android:backgroundTint="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto de Emergencia"
            android:textStyle="bold"
            android:textColor="#D32F2F"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etContactoNombreExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del contacto"
            android:background="@drawable/bg_lista_redonda"
            android:backgroundTint="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etContactoTelExp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono de contacto"
            android:inputType="phone"
            android:background="@drawable/bg_lista_redonda"
            android:backgroundTint="#FFFFFF"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnGuardarExpediente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Guardar Expediente"
            android:textSize="18sp"
            app:backgroundTint="#1A237E"
            app:cornerRadius="12dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>