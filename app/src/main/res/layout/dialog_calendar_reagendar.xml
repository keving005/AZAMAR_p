<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selecciona la nueva fecha"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3949AB"
        android:textAlignment="center"
        android:layout_marginBottom="16dp"/>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#FFFFFF">

        <CalendarView
            android:id="@+id/calendarViewReagendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.Light"
            android:dateTextAppearance="@style/TextAppearance.MaterialComponents.Body1"
            android:weekDayTextAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toca un dÃ­a para continuar"
        android:textAlignment="center"
        android:textColor="#757575"
        android:textSize="12sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>