<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Especialista:"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/spEspecialista_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/etTipoCita_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tipo de cita"
        android:layout_marginBottom="16dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/etFechaCita_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de la Cita"
        android:focusable="false"
        android:clickable="true"
        android:drawableEnd="@android:drawable/ic_menu_today"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etHoraCita_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora de la Cita"
        android:focusable="false"
        android:clickable="true"
        android:drawableEnd="@android:drawable/ic_lock_idle_alarm" />

</LinearLayout>